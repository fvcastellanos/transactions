{% extends 'layout.html.twig' %}

{% import 'macros.html.twig' as utils %}

{% block breadcrumb %}
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="{{ path('welcome') }}">Welcome</a>
        <a class="breadcrumb-item active" href="{{ path('requirement') }}">Deposit</a>
    </nav>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Deposit Requirement</h1>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.account) }}
                    {{ form_widget(form.account, { 'attr' : { 'class' : 'form-control', 'readonly': 'true' }}) }}
                    {{ form_errors(form.account) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.amount) }}
                    {{ form_widget(form.amount, { 'attr' : { 'class' : 'form-control' }}) }}
                    {{ form_errors(form.amount) }}
                </div>
                {{ form_row(form.request, { 'attr' : { 'class' : 'btn btn-primary' }}) }}
                {{ form_end(form) }}

                {% if app_errors is defined %}
                    {{ utils.showApplicationErrors(app_errors) }}
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}