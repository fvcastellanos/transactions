{% extends 'layout.html.twig' %}

{% block breadcrumb %}
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="{{ path('homepage') }}">Home</a>
        <a class="breadcrumb-item active" href="{{ path('profile_index') }}">Profiles</a>
    </nav>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Profiles</h1>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for profile in profiles %}
                        <tr>
                            <td><a href="{{ path('profile_show', { 'id': profile.id }) }}">{{ profile.id }}</a></td>
                            <td>{{ profile.name }}</td>
                            <td>{{ profile.email }}</td>
                            <td>{{ profile.phone }}</td>
                            <td>{{ profile.active }}</td>
                            <td>
                                <a href="{{ path('profile_show', { 'id': profile.id }) }}" class="btn btn-primary">Show</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>

{% endblock %}
