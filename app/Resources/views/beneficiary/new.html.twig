{% extends 'layout.html.twig' %}

{% import 'macros.html.twig' as utils %}

{% block breadcrumb %}
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="{{ path('welcome') }}">Welcome</a>
        <a class="breadcrumb-item" href="{{ path('beneficiaries') }}">Beneficiaries</a>
        <a class="breadcrumb-item active" href="{{ path('new-beneficiary') }}">New</a>
    </nav>
{% endblock %}

{% block body %}
    <h1>Add Beneficiary</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.account) }}
            {{ form_widget(form.account, { 'attr' : { 'class' : 'form-control' }}) }}
            {{ form_errors(form.account) }}
        </div>
        <div class="form-group">
            {{ form_label(form.alias) }}
            {{ form_widget(form.alias, { 'attr' : { 'class' : 'form-control' }}) }}
            {{ form_errors(form.alias) }}
        </div>
        <div class="form-group">
            {{ form_label(form.maxAmount) }}
            {{ form_widget(form.maxAmount, { 'attr' : { 'class' : 'form-control' }}) }}
            {{ form_errors(form.maxAmount) }}
        </div>
        <div class="form-group">
            {{ form_label(form.transferQuota) }}
            {{ form_widget(form.transferQuota, { 'attr' : { 'class' : 'form-control' }}) }}
            {{ form_errors(form.transferQuota) }}
        </div>
        {{ form_row(form.check, { 'attr' : { 'class' : 'btn btn-primary' }}) }}
    {{ form_end(form) }}

    {% if app_errors is defined %}
        {{ utils.showApplicationErrors(app_errors) }}
    {% endif %}
{% endblock %}
