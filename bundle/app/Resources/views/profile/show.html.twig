{% extends 'layout.html.twig' %}

{% block breadcrumb %}
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="{{ path('homepage') }}">Home</a>
        <a class="breadcrumb-item" href="{{ path('profile_index') }}">Profiles</a>
        <a class="breadcrumb-item active" href="{{ path('profile_show', { 'id': profile.id }) }}">Show Profile</a>
    </nav>
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Profile</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ profile.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ profile.name }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ profile.email }}</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>{{ profile.phone }}</td>
                    </tr>
                    <tr>
                        <th>Active</th>
                        <td>{{ profile.active }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('profile_index') }}" class="btn btn-primary">Back to the list</a>
            </div>
        </div>
    </div>

{% endblock %}
