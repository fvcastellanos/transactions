{% extends 'base.html.twig' %}

{% block body %}
    <h1>Beneficiary</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ beneficiary.id }}</td>
            </tr>
            <tr>
                <th>Alias</th>
                <td>{{ beneficiary.alias }}</td>
            </tr>
            <tr>
                <th>Maxamounttransfer</th>
                <td>{{ beneficiary.maxAmountTransfer }}</td>
            </tr>
            <tr>
                <th>Transactionsquota</th>
                <td>{{ beneficiary.transactionsQuota }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if beneficiary.created %}{{ beneficiary.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('beneficiary_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('beneficiary_edit', { 'id': beneficiary.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
