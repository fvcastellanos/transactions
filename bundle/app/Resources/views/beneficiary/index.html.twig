{% extends 'layout.html.twig' %}

{% block breadcrumb %}
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="{{ path('welcome') }}">Welcome</a>
        <a class="breadcrumb-item active" href="{{ path('beneficiaries') }}">Beneficiaries</a>
    </nav>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Beneficiaries</h1>

                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Alias</th>
                            <th>Max Amount</th>
                            <th>Quota</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for beneficiary in beneficiaries %}
                            <tr>
                                <td><a href="{{ path('show-beneficiary', { 'id': beneficiary.id }) }}">{{ beneficiary.id }}</a></td>
                                <td>{{ beneficiary.alias }}</td>
                                <td>{{ beneficiary.maxAmountTransfer }}</td>
                                <td>{{ beneficiary.transactionsQuota }}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('show-beneficiary', { 'id': beneficiary.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('edit-beneficiary', { 'id': beneficiary.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <a href="{{ path('new-beneficiary') }}" class="btn btn-primary">Create</a>
            </div>
        </div>

    </div>
{% endblock %}
